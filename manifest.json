{
  "manifest_version": 3,
  "name": "Manga Updates Unread Counter",
  "version": "3.2",
  "description": "An extension to count unread series in MangaUpdates and sorts them accordingly",
  "author": "marxseny@gmail.com",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.mangaupdates.com/*"
      ],
      "js": [
        "loader.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css"
      ],
      "matches": [
        "https://www.mangaupdates.com/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://api.mangaupdates.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}